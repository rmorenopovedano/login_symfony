{% extends 'base.html.twig' %}

{% block body %}
    <h1>User edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-dark" type="submit" value="Edit" />
        <input class="btn btn-dark" type="hidden" value="error" name="error"/>
    {{ form_end(edit_form) }}

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-light" href="{{ path('user_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-secondary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {% if message is defined %}
        <span class="alert-info">{{ message }}</span>
    {% endif %}
{% endblock %}
